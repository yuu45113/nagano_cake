<div class="container">
  <div class="row">
    <div class="col-12 px-5 px-sm-0">
      <div class="mt-3 mb-3">
        <span class="bg-light ml-5 px-2">
          <strong>会員情報編集</strong>
        </span>
      </div>

      <%= form_with model: @customer,url: customers_information_path, method: :patch do |f| %>

        <div class="form-group mt-4 mb-1">
          <div class="form-row">
            <div class="col-2">
              <%= f.label :氏名 %>
            </div>
            <div class="col-3">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
            <div class="col-3">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </div>
          </div>
        </div>

         <div class="form-group mb-1">
           <div class="form-row">
            <div class="col-2">
              <%= f.label :フリガナ %>
            </div>
            <div class="col-3">
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            </div>
            <div class="col-3">
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </div>
          </div>
        </div>

        <div class="form-group mb-1">
          <div class="form-row">
            <div class="col-2">
              <%= f.label :郵便番号 %>
            </div>
            <div class="col-3">
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
            </div>
          </div>
        </div>

        <div class="form-group mb-1">
          <div class="form-row">
            <div class="col-2">
              <%= f.label :住所 %>
            </div>
            <div class="col-3">
              <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
            </div>
          </div>
        </div>

         <div class="form-group mb-1">
           <div class="form-row">
            <div class="col-2">
              <%= f.label :電話番号 %>
            </div>
            <div class="col-3">
              <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
            </div>
          </div>
        </div>

        <div class="form-group mb-1">
          <div class="form-row">
            <div class="col-2">
              <%= f.label :メールアドレス %>
            </div>
            <div class="col-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </diiv>
          </div>
        </div>
        
        <div class="row justify-content-center">
          <div class="mt-2 mr-5 col-3">
            <%= f.submit "編集内容を保存", class: "btn btn-block btn-sm btn-success ml-5 mr-5" %>
          </div>
          <div class="mt-2 ml-5 col-5">
            <%= link_to "退会する", customers_confirm_path, class: "btn btn-sm btn-danger ml-5" %>
          </div>
        </div>
      <% end %>