<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <div class="mt-3 mb-3">
        <span class="bg-light ml-5 px-2">
          <strong>会員情報編集</strong>
        </span>
      </div>
      
      <%= form_with model: @customer,url: customers_information_path do |f| %>

        <div class="field mb-1">
          <%= f.label :氏名 %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>

         <div class="field mb-1">
          <%= f.label :フリガナ %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </div>
        
        <div class="field mb-1">
          <%= f.label :郵便番号 %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
        
        <div class="field mb-1">
          <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
        
         <div class="field mb-1">
          <%= f.label :電話番号 %>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>
        
        <div class="field mb-1">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        
        <div class="actions mt-1 ml-5">
          <%= f.submit "編集内容を保存", class: "btn btn-sm btn-success ml-5 mr-5" %>
          <%= link_to "退会する", customers_confirm_path, class: "btn btn-sm btn-danger ml-5" %>
        </div>
      <% end %>