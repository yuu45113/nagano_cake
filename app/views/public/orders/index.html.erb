<div class="container">
  <div class="mt-3 mb-3">
    <span class="bg-light ml-5 px-2">
      <strong>注文履歴一覧</strong>
    </span>
  </div>

  <div class="row">
    <table class="table table-bordered">
      <thead class="bg-light">
        <tr>
          <th class="col-2">注文日</th>
          <th class="col-5">配送先</th>
          <th class="col-2">注文商品</th>
          <th class="col-1">支払金額</th>
          <th class="col-2">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td class="text-center mt-3">
              <%= order.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td>
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td>
              <%= order.amounts_billed %>円
            </td>
            <td>
              <%=link_to "表示する", order_path(order.id), class: "btn btn-lg btn-primary mt-2 ml-3" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>