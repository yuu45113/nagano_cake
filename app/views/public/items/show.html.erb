<div class="container">
  <div class="mt-5 mb-3">
    <div class="row">
      <div class="col-5  px-5 px-sm-0 mt-5">

        <div>
            <% if @item.image.attached? %>
              <%= image_tag @item.image, size: "300x200" %>
            <% else %>
               <%= image_tag 'no_image', size: "300x200" %>
            <% end %>
        </div>
      </div>

      <div class="col-7 px-5 px-sm-0 mt-5">
        <div class="mb-3">
          <strong><%= @item.name %></strong>
        </div>

        <div class="mb-5">
          <%= @item.introduction %>
        </div>

        <div class="mb-3">
          ¥<%= ((@item.price*1.1).floor).to_s(:delimited) %>(税込)
        </div>
        <%= form_with model: @cart_items, url: cart_items_path do |f| %>
          <div class="mt-5 ml-5">
            <%= f.select :amount, *[1..10] %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.submit "カートに入れる", class: "btn  btn-success ml-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>