<div class="container">
  <div class"row">
    <div class="mt-5">
    <span class="mt-5 mb-3">
      <strong class="mt-5">商品一覧</strong>
    </span>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-3">
            <div class="mt-3 mr-3">
             <% if item.image.attached? %>
              <%= image_tag item.image, size: "200x100" %>
             <% else %>
               <%= image_tag 'no_image', size: "200x100" %>
              <% end %>
            </div>
            <div class="mt-3 mr-3" %>
              <%= link_to item_path(item.id) do %>
               <%= item.name %>
              <% end %>
            </div>
            <div class="mt-3 mr-3 mb-3">
              ¥<%= item.price %>
            </div>
          </div>
        <% end %>
        <div>
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>
