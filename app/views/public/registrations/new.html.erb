<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <strong>新規会員登録</strong>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :名前（姓） %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
          <%= f.label :（名） %>
          <%= f.text_field :first_name, autocomplete: "first_name" %>
        </div>

         <div class="field">
          <%= f.label :フリガナ（セイ） %>
          <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
          <%= f.label :（メイ） %>
          <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code, autocomplete: "postal_code" %>
        </div>

        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address, autocomplete: "address" %>
        </div>

        <div class="field">
          <%= f.label :電話番号（ハイフンなし） %>
          <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（６文字以上） %>
          <% if @minimum_password_length %>
          <!--<em><%#= @minimum_password_length %></em>-->
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用） %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
        </div>
      <% end %>

      <p>
        <strong>既</strong>に<strong>登録済</strong>みの<strong>方</strong>
      </p>
    <%#= render "public/shared/links" %>
      <div>
    　   <%= link_to customer_session_path do  %>
          こちら
        <% end %>
        からログインしてください。
      </div>
    </div>
  </div>
</div>
