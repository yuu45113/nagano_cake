<div class="container">
  <div class="row">
    <div class="col-12 px-5 px-sm-0">
      <div class="mt-3">
        <span class="bg-light mt-3 px-2">
          <strong>新規会員登録</strong>
        </span>
      </div>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field mt-5">
          <div class="form-row">
            <div class="col-3">
              <%= f.label :名前 %>
            </div>
            <div class="col-3">
              （姓）　<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            </div>
            <div class="col-3">
              （名）　<%= f.text_field :first_name, autocomplete: "first_name" %>
            </div>
          </div>
        </div>

        <div class="field mt-2">
          <div class="form-row">
            <div class="col-3">
              <%= f.label :フリガナ %>
            </div>
            <div class="col-3">
              （セイ）<%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
            </div>
            <div class="col-3">
              （メイ）<%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
            </div>
          </div>
        </div>

        <div class="field mt-2">
          <div class="form-row">
            <div class="col-3">
              <%= f.label :メールアドレス %>
            </div>
            <div class="col-3">
          　　　　<%= f.email_field :email, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="field mt-2">
          <div class="form-row">
            <div class="col-3">
              <%= f.label :郵便番号（ハイフンなし） %>
            </div>
            <div class="col-3">
            　　　　<%= f.text_field :postal_code, autocomplete: "postal_code" %>
            </div>
          </div>
        </div>

        <div class="field mt-2">
          <div class="form-row">
            <div class="col-3">
              <%= f.label :住所 %>
            </div>
            <div class="col-6">
            　　　　<%= f.text_field :address, autocomplete: "address" %>
            </div>
          </div>
        </div>

        <div class="field mt-2">
          <div class="form-row">
            <div class="col-3">
              <%= f.label :電話番号（ハイフンなし） %>
            </div>
            <div class="col-3">
                　　　　<%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
            </div>
          </div>
        </div>

        <div class="field mt-2">
          <div class="form-row">
            <div class="col-3">
              <%= f.label :パスワード（６文字以上） %>
            </div>
            <div class="col-3">
              <% if @minimum_password_length %>
              <!--<em><%#= @minimum_password_length %></em>-->
              <% end %>
              　　　　<%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="field mt-2">
          <div class="form-row">
            <div class="col-3">
              <%= f.label :パスワード（確認用） %>
            </div>
            <div class="col-3">
            　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="actions mt-2 col-2 mx-auto">
          <%= f.submit "新規登録", class: "btn btn-block btn-success" %>
        </div>
      <% end %>

      <div class="mt-3">
        <span class="bg-light ml-5 px-2">
          <strong>既に登録済みの方</strong>
        </span>
        <div>
      　   <%= link_to customer_session_path do  %>
            こちら
          <% end %>
          からログインしてください。
        </div>
      </div>
    </div>
  </div>
</div>
