<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to root_path, class: "navbar-brand" do %>
            <span>LOGO</span>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="navbar-collapse collapse" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">

            <% if customer_signed_in? %>
              <li>
                <%= link_to customers_my_page_path, class: "nav-link text-light" do %>
                マイページ
                <% end %>
              </li>

              <li>
                <%= link_to items_path, class: "nav-link text-light" do %>
                商品一覧
                <% end %>
              </li>

              <li>
                <%= link_to cart_items_path, class: "nav-link text-light" do  %>
                カート
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_customer_session_path, method: :delete, class: "nav-link text-light" do  %>
                ログアウト
                <% end %>
              </li>
              
            <% elsif admin_signed_in? %>
              <li>
                <%= link_to items_path, class: "nav-link text-light" do %>
                商品一覧
                <% end %>
              </li>
                
              <li>
                <%= link_to admin_customers_path, class: "nav-link text-light" do %>
                会員一覧
                <% end %>
              </li>
                
              <li>
                <%= link_to admin_root_path, class: "nav-link text-light" do %>
                注文履歴一覧
                <% end %>
              </li>
                
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-light" do  %>
                ログアウト
                <% end %>
              </li>
              
            <% else %>

              <li class="nav-item">
                <%= link_to about_path, class: "nav-link text-light" do  %>
                About
                <% end %>
              </li>

              <li>
                <%= link_to items_path, class: "nav-link text-light" do %>
                商品一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_customer_registration_path, class: "nav-linl text-light" do %>
                新規登録
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to customer_session_path, class: "nav-link text-light" do  %>
                ログイン
                <% end %>
              </li>
            <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
