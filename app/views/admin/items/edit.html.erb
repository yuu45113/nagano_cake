<div class="container">
  <div class="mt-5 ">
    <span class="bg-light px-2">
      <strong>商品編集</strong>
    </span>
  </div>
  
  <div class="row">
    <div class="col-3 mt-5">
      <%= form_with model: @item do |f| %>
        <div class="mt-3">
          <%= f.label :商品画像%>
        </div>

        <div class="mt-3">
          <%= f.label :商品名 %>
        </div>

        <div class="mt-3">
          <%= f.label :商品説明 %>
        </div>

         <div class="mt-3">
          <%= f.label :税抜価格 %>
        </div>
      <% end %>
    </div>
    
    <div class="col-9 mt-5">
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
        <div class="mt-3">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="mt-3">
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="mt-3">
          <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction" %>
        </div>
        <div class="mt-3">
          <%= f.text_field :price, autofocus: true, autocomplete: "price" %>円
        </div>
        <div class="mt-1 ml-5">
          <%= f.submit "変更を保存", class: "btn btn- btn-success mt-5 ml-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>