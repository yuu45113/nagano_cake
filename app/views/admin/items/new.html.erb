<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <div class="mt-3 mb-3">
        <span class="bg-light ml-5 px-2">
          <strong>商品新規登録</strong>
        </span>
      </div>
      
      <%= from_with model: @admin do |f| %>
      
        <!--<div class="field mb-1">-->
        <!--  <%#= f.label : %>-->
        <!--  <%#= f.text_field :, autofocus: true, autocomplete: "" %>-->
        <!--</div>-->
        
        <div class="field mb-1">
          <%= f.label :商品名 %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        
        <div class="field mb-1">
          <%= f.label :商品説明 %>
          <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction" %>
        </div>
        
         <div class="field mb-1">
          <%= f.label :税抜価格 %>
          <%= f.text_field :price, autofocus: true, autocomplete: "price" %>円
        </div>
        
         <div class="actions mt-1 ml-5">
          <%= f.submit "新規登録", class: "btn btn- btn-success ml-5" %>
        </div>
      <% end %>