<div class="container">
  <div class="mt-5 mb-3">
    <span class="bg-light  px-2">
      <strong>注文履歴一覧</strong>
    </span>
  </div>
  <div class="row">
    <table class="table">
      <thead class="bg-light">
        <tr>
          <th class="col-3">購入日時</th>
          <th class="col-3">購入者</th>
          <th class="col-6">注文個数</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td>
              <%= order.name %>
            </td>
            <td>
              <% sum = 0 %>
                <% order.order_details.each do |order_detail| %>
                  <% sum = sum + order_detail.amount %>
                <% end %>
              <%= sum %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row justify-content-center">
    <div class="mt-5">
      <%= paginate @orders %>
    </div>
  </div>
</div>