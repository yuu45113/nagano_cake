<div class="container">
  <div class="mt-3 mb-3">
    <span class="bg-light ml-5 px-1">
      <strong>会員一覧</strong>
    </span>
  </div>

  <div class="row">
    <table class= "table">
  　  <thead class="bg-light" >
       <tr><th>会員ID</th><th>氏名</th><th>メールアドレス</th><th>ステータス</th></tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="col-2">
              <%= customer.id %>
            </td>

            <td class="col-2">
              <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.last_name %> <%= customer.first_name %>
              <% end %>
            </td>

            <td class="col-4">
              <%= customer.email %>
            </td>

            <td class="col-4">
              <% if customer.is_deleted %>
                無効
              <% else %>
                <div class="text-success">
                  有効
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div>
      <%= paginate @customers %>
    </div>
  </div>
</div>